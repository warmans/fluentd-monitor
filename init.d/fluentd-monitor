#!/bin/bash
# fluentd-monitor
# chkconfig: 345 20 80
# description: Fluentd Monitoring UI
# processname: fluentd-monitor

DAEMON=fluentd-monitor
DAEMONOPTS=""
DAEMON_PATH=$(dirname $(which $DAEMON))

NAME=fluentd-monitor
DESC="Fluentd Monitoring UI"
LOGFILE="/var/log/$NAME.log"
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

if [ "$EUID" -ne 0 ]
	then echo "service must run as root"
	exit
fi

case "$1" in
	start)
	printf "%-50s" "Starting $NAME..."

	if [ -f $PIDFILE ]; then
		PID=`cat $PIDFILE`
		if [ -n "`ps axf | grep ${PID} | grep -v grep`" ]; then
			echo "Already running"
			exit 1
		fi
	fi

	cd $DAEMON_PATH
	PID=`$DAEMON $DAEMONOPTS >> $LOGFILE 2>&1 & echo $!`
	if [ -z $PID ]; then
		printf "%s\n" "Fail"
	else
		echo $PID > $PIDFILE
		printf "%s\n" "Ok"
	fi
	;;
	status)
	printf "%-50s" "Checking $NAME..."
	if [ -f $PIDFILE ]; then
		PID=`cat $PIDFILE`
		if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
			printf "%s\n" "Process dead but pidfile exists"
		else
			echo "Running"
		fi
	else
		printf "%s\n" "Service not running"
	fi
	;;
	stop)
	printf "%-50s" "Stopping $NAME"
	PID=`cat $PIDFILE`
	cd $DAEMON_PATH
	if [ -f $PIDFILE ]; then
		kill -HUP $PID
		printf "%s\n" "Ok"
		rm -f $PIDFILE
	else
		printf "%s\n" "pidfile not found"
	fi
	;;

	restart)
	$0 stop
	$0 start
	;;

	*)
	echo "Usage: $0 {status|start|stop|restart}"
	exit 1
esac
